{% extends 'admin/layouts/master.html.twig' %}

{% block title %}Tout les categories {% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
<div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">Liste des categories</h4>
        <div>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i>Ajouter une categorie</a>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <table id="example" class="table table-striped table-bordered display" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Is_active</th>
                    
                    <th>actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Is_active</th>

                    <th>actions</th>
                </tr>
            </tfoot>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.isActive }}</td>
                        
                        <td>
                            {{ include('admin/category/_delete_form.html.twig') }}
                            <a class="btn btn-warning btn-sm btn-bordered" href="{{ path('app_category_edit', {'id': category.id}) }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


    
{% endblock %}
{% block javascripts %}

{% endblock %}