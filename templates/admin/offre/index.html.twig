{% extends 'admin/layouts/master.html.twig' %}

{% block title %}Tout les Offres {% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
<div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">Liste des categories</h4>
        <div>
            <a href="{{ path('app_offre_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i>Ajouter un offre</a>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <table id="example" class="table table-striped table-bordered display" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Intitule</th>
                    <th>Num√©ro d'offre</th>
                    <th>url de condidateur</th>
                    <th>actions</th>
                </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.intitule }}</td>
                <td>{{ offre.number }}</td>
                <td>{{ offre.urlCondidateur }}</td>
                <td>
                    <a class="btn btn-sm btn-bordered btn-info" href="{{ path('app_offre_show', {'id': offre.id}) }}"><i class="fa fa-eye"></i></a>
                    <a class="btn btn-sm btn-bordered btn-warning" href="{{ path('app_offre_edit', {'id': offre.id}) }}"><i class="fa fa-edit"></i></a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
        </table>
    </div>
</div>
{% endblock %}

