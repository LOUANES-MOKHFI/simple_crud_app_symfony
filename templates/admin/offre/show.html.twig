{% extends 'admin/layouts/master.html.twig' %}

{% block title %}Afficher un Offre {% endblock %}
{% block stylesheets %}

{% endblock %}


{% block body %}
 <div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">Afficher un offre</h4> 

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ offre.intitule }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offre.description }}</td>
            </tr>
            <tr>
                <th>Numéro d'offre</th>
                <td>{{ offre.number }}</td>
            </tr>
            <tr>
                <th>Url de condidateur</th>
                <td>{{ offre.urlCondidateur }}</td>
            </tr>
            <tr>
                <th>Competaces demandées</th>
                <td>
                    {% for competance in offre.competances %}
                        {{ competance.name }}, 
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>


    <a class="btn btn-warning" href="{{ path('app_offre_index') }}">Retour</a>

    <a class="btn btn-warning" href="{{ path('app_offre_edit', {'id': offre.id}) }}">Modifier</a>

    {{ include('admin/offre/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
