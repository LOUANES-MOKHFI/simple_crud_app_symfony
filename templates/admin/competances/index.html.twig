{% extends 'admin/layouts/master.html.twig' %}

{% block title %}Tout les competances {% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
<div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">Liste des competances</h4>
        <div>
            <a href="{{ path('app_competances_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i>Ajouter une competance</a>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <table id="example" class="table table-striped table-bordered display" style="width:100%">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Competance</th>
                    
                    <th>actions</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Competance</th>

                    <th>actions</th>
                </tr>
            </tfoot>
            <tbody>
                {% for competance in competances %}
                    <tr>
                        <td>{{ competance.id }}</td>
                        <td>{{ competance.name }}</td>
                        <td>
                            {{ include('admin/competances/_delete_form.html.twig') }}
                            <a class="btn btn-sm btn-bordered btn-warning" href="{{ path('app_competances_edit', {'id': competance.id}) }}"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>



{% endblock %}
